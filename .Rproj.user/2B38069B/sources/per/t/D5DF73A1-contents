  stat_summary(aes(x = age_group, y = bin_prop, color = walker), fun = "mean",position = position_dodge(.75), size = 1.75, shape = "—", data = filter(ds_bout_bin, age > 10), show.legend = FALSE) +
  scale_color_manual(name = "", values = c("lightblue","darkblue","orange","brown")) + 
  facet_wrap(~duration_bins_label, nrow = 1) + 
  xlab("") + geom_text(data = anno, aes(x = x, y = y), label = "*", size = 8, show.legend = FALSE) +
  scale_y_continuous(name = "Percentage of bouts", breaks = seq(0, 100, 25), limits = c(0,100)) + theme(legend.position = "bottom") 

